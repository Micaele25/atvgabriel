package teste2;

public class Principal {

	public static void Main(String[] args) {
		moto m = new moto();
		
		m.marca = "Honda";
		m.modelo = "CBR 500R";
		m.cor = "Vermelho";
		m.ano = 2021;
		m.cilidradas = 500;

		carro c = new carro();
		c.marca = "Toyota";
		c.modelo = "Corolla";
		c.cor = "Preto";
		c.ano = 2020;
		c.numero_portas = 4 ;
		
		System.out.println(m.descricao());
		System.out.println(c.descricao());
	
		


	}

}



package teste2;

public class moto {
	    String marca;
	    String modelo;
	    String cor;
	    int ano;
	    int cilidradas;
	    
	    public String descricao() {
	        return "Marca: " + marca + ", Modelo: " + modelo + ", Ano: " + ano + ", Cor: " + cor + ", Cilidradas: " + cilidradas;
	    }

}


package teste2;

public class carro {
	String marca;
    String modelo;
    String cor;
    int ano;
    int numero_portas;

	
	public String descricao() {
        return "Marca: " + marca + ", Modelo: " + modelo + ", Ano: " + ano + ", Cor: " + cor + ", Numero_portas: " + numero_portas;
	}
}
